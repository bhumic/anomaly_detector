<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="anomalyDetector.featureExtractor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="anomalyDetector.activities.MainFeaturesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="anomalyDetector.services.ColectFeaturesService"
            android:enabled="true" >
            <intent-filter android:label="@string/startService" >
                <action android:name="anomalyDetector.services.ColectFeaturesService" />
            </intent-filter>
        </service>

        <activity
            android:name="anomalyDetector.activities.ShowAnonPagesActivity"
            android:label="@string/title_activity_show_anon_pages"
            android:parentActivityName="anomalyDetector.activities.MainFeaturesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="anomalyDetector.activities.MainFeaturesActivity" />
        </activity>
    </application>

</manifest>